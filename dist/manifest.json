{
  "manifest_version": 3,
  "name": "LeetCode Power-Up",
  "version": "1.0",
  "description": "YouTube solutions sidebar + per-problem scratchpad on LeetCode.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://leetcode.com/problems/*",
    "https://www.googleapis.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}